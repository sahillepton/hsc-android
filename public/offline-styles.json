{
    "version": 8,
    "name": "Offline Light Darker (No Boundaries + Labels)",
    "glyphs": "{ORIGIN}/fonts/{fontstack}/{range}.pbf",
    "sources": {
      "offline-tiles": {
        "type": "vector",
        "tiles": ["{ORIGIN}/tiles/{z}/{x}/{y}.pbf"],
        "minzoom": 0,
        "maxzoom": 14
      }
    },
    "layers": [
      {
        "id": "background",
        "type": "background",
        "paint": {
          "background-color": "#edf2f7"
        }
      },
  
      {
        "id": "landcover",
        "type": "fill",
        "source": "offline-tiles",
        "source-layer": "landcover",
        "paint": {
          "fill-color": "#e2e8f0",
          "fill-opacity": 1
        }
      },
  
      {
        "id": "landuse",
        "type": "fill",
        "source": "offline-tiles",
        "source-layer": "landuse",
        "paint": {
          "fill-color": "#dbe4ee",
          "fill-opacity": 1
        }
      },
  
      {
        "id": "parks",
        "type": "fill",
        "source": "offline-tiles",
        "source-layer": "park",
        "paint": {
          "fill-color": "#bef264",
          "fill-opacity": 0.7
        }
      },
  
      {
        "id": "water",
        "type": "fill",
        "source": "offline-tiles",
        "source-layer": "water",
        "paint": {
          "fill-color": "#7dd3fc",
          "fill-opacity": 0.9
        }
      },
  
      {
        "id": "waterway",
        "type": "line",
        "source": "offline-tiles",
        "source-layer": "waterway",
        "paint": {
          "line-color": "#38bdf8",
          "line-width": [
            "interpolate",
            ["linear"],
            ["zoom"],
            5,
            0.4,
            10,
            1.5,
            14,
            3.5
          ]
        }
      },
  
      {
        "id": "roads-casing",
        "type": "line",
        "source": "offline-tiles",
        "source-layer": "road",
        "paint": {
          "line-color": "#94a3b8",
          "line-width": [
            "interpolate",
            ["linear"],
            ["zoom"],
            5,
            0.9,
            10,
            3,
            14,
            9
          ],
          "line-opacity": 0.85
        },
        "layout": {
          "line-cap": "round",
          "line-join": "round"
        }
      },
  
      {
        "id": "roads",
        "type": "line",
        "source": "offline-tiles",
        "source-layer": "road",
        "paint": {
          "line-color": "#ffffff",
          "line-width": [
            "interpolate",
            ["linear"],
            ["zoom"],
            5,
            0.5,
            10,
            2,
            14,
            6.5
          ],
          "line-opacity": 1
        },
        "layout": {
          "line-cap": "round",
          "line-join": "round"
        }
      },
  
      {
        "id": "buildings",
        "type": "fill",
        "source": "offline-tiles",
        "source-layer": "building",
        "minzoom": 13,
        "paint": {
          "fill-color": "#cbd5e1",
          "fill-outline-color": "#94a3b8",
          "fill-opacity": 0.85
        }
      },
  
      {
        "id": "country-labels",
        "type": "symbol",
        "source": "offline-tiles",
        "source-layer": "place",
        "minzoom": 2,
        "filter": ["==", ["get", "class"], "country"],
        "layout": {
          "text-field": ["coalesce", ["get", "name:en"], ["get", "name"]],
          "text-font": ["Open Sans Bold", "Arial Unicode MS Bold"],
          "text-size": [
            "interpolate",
            ["linear"],
            ["zoom"],
            2,
            12,
            6,
            18
          ],
          "text-transform": "uppercase",
          "text-letter-spacing": 0.1
        },
        "paint": {
          "text-color": "#334155",
          "text-halo-color": "#edf2f7",
          "text-halo-width": 1.5
        }
      },
  
      {
        "id": "city-labels",
        "type": "symbol",
        "source": "offline-tiles",
        "source-layer": "place",
        "minzoom": 4,
        "filter": ["==", ["get", "class"], "city"],
        "layout": {
          "text-field": ["coalesce", ["get", "name:en"], ["get", "name"]],
          "text-font": ["Open Sans Semibold", "Arial Unicode MS Bold"],
          "text-size": [
            "interpolate",
            ["linear"],
            ["zoom"],
            4,
            12,
            10,
            18
          ]
        },
        "paint": {
          "text-color": "#1e293b",
          "text-halo-color": "#edf2f7",
          "text-halo-width": 1.2
        }
      },
  
      {
        "id": "town-labels",
        "type": "symbol",
        "source": "offline-tiles",
        "source-layer": "place",
        "minzoom": 7,
        "filter": ["==", ["get", "class"], "town"],
        "layout": {
          "text-field": ["coalesce", ["get", "name:en"], ["get", "name"]],
          "text-font": ["Open Sans Regular", "Arial Unicode MS Regular"],
          "text-size": [
            "interpolate",
            ["linear"],
            ["zoom"],
            7,
            11,
            14,
            15
          ]
        },
        "paint": {
          "text-color": "#334155",
          "text-halo-color": "#edf2f7",
          "text-halo-width": 1
        }
      },
  
      {
        "id": "village-labels",
        "type": "symbol",
        "source": "offline-tiles",
        "source-layer": "place",
        "minzoom": 10,
        "filter": ["==", ["get", "class"], "village"],
        "layout": {
          "text-field": ["coalesce", ["get", "name:en"], ["get", "name"]],
          "text-font": ["Open Sans Regular", "Arial Unicode MS Regular"],
          "text-size": 12
        },
        "paint": {
          "text-color": "#475569",
          "text-halo-color": "#edf2f7",
          "text-halo-width": 1
        }
      },
  
      {
        "id": "road-labels",
        "type": "symbol",
        "source": "offline-tiles",
        "source-layer": "transportation_name",
        "minzoom": 12,
        "layout": {
          "symbol-placement": "line",
          "text-field": ["coalesce", ["get", "name:en"], ["get", "name"]],
          "text-font": ["Open Sans Regular", "Arial Unicode MS Regular"],
          "text-size": 11
        },
        "paint": {
          "text-color": "#64748b",
          "text-halo-color": "#edf2f7",
          "text-halo-width": 1
        }
      }
    ]
  }
  